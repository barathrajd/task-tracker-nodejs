{
  "name": "@barthrajd/task-tracker",
  "version": "0.0.1",
  "author": "Barathraj Devarajan <barathraj.uidev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barathrajd/task-tracker-nodejs.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "types": "./dist/index.d.ts",
  "scripts": {
    "postbuild": "node scripts/setup-bin.mjs",
    "build": "rslib build && pnpm postbuild",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "biome format --write",
    "cli": "node --watch dist/task-tracker.js",
    "test": "rstest",
    "changelog": "conventional-changelog -o CHANGELOG.md -p angular",
    "release": "release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@rslib/core": "0.18.4",
    "@rstest/core": "0.7.5",
    "@types/node": "22.19.3",
    "conventional-changelog": "7.1.1",
    "conventional-changelog-angular": "8.1.0",
    "conventional-changelog-cli": "5.0.0",
    "release-it": "^19.1.0",
    "release-it-pnpm": "^4.6.6",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
