{
  "name": "@barathrajd/task-tracker",
  "version": "0.0.2-beta.6",
  "author": "Barathraj Devarajan <barathraj.uidev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barathrajd/task-tracker-nodejs.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "bin": {
    "task-cli": "bin/task-cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "postbuild": "node scripts/setup-bin.mjs",
    "build": "rslib build && pnpm postbuild",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "biome format --write",
    "cli": "node --watch dist/task-tracker.js",
    "test": "rstest",
    "release": "release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@rslib/core": "0.18.4",
    "@rstest/core": "0.7.5",
    "@types/node": "22.19.3",
    "release-it": "19.1.0",
    "release-it-pnpm": "4.6.6",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "packageManager": "pnpm@10.26.0"
}
