{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "plugins": {
    "release-it-pnpm": {
      "inFile": "CHANGELOG.md",
      "publishCommand": "pnpm publish --no-git-checks"
    }
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}",
    "commit": true
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["pnpm lint"],
    "after:bump": "pnpm build",
    "after:release": "echo Successfully created a release ${version} for ${repo.repository}."
  },
  "github": {
    "release": true,
    "releaseName": "âœ¨ ${version}"
  }
}
